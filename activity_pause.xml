<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pause_bg"
    android:orientation="vertical"
    tools:context=".PauseActivity"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/home_icon"
            android:contentDescription="@string/home_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/resume_btn"
            android:layout_width="295dp"
            android:layout_height="150dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/resume_btn"
            android:contentDescription="@string/resume_btn" />

        <Button
            android:id="@+id/settings_btn"
            android:layout_width="295dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/setting_btn"
            android:contentDescription="@string/settings_btn" />

        <Button
            android:id="@+id/restart_btn"
            android:layout_width="295dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/res_btn"
            android:contentDescription="@string/restart_btn" />

        <Button
            android:id="@+id/quit_btn"
            android:layout_width="295dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/quit_btn"
            android:contentDescription="@string/quit_btn" />
    </LinearLayout>

</LinearLayout>
